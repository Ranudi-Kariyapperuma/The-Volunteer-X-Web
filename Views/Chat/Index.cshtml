@{
    ViewData["Title"] = "Chat Page";
    var currentUser = User.Identity.Name ?? "Anonymous";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Chat</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        /* Your CSS styles here */
    </style>
</head>
<body>
    <div class="container">
        <div class="row">
            <div class="col-md-3">
                <h2>Online Users</h2>
                <ul id="userList" class="list-group">
                    <!-- User list will be dynamically populated here -->
                </ul>
            </div>
            <div class="col-md-9">
                <div id="chatBox" class="chat-box">
                    <!-- Messages will be dynamically added here -->
                </div>
                <div class="input-group mb-3">
                    <input type="text" id="messageInput" class="form-control" placeholder="Type your message..." />
                    <div class="input-group-append">
                        <button type="submit" id="sendButton" class="btn btn-primary">Send</button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Hidden input to store current user's username -->
    <input type="hidden" id="currentUser" name = "currentUser" value="@currentUser" />
    <!-- Bootstrap and SignalR JS imports -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/5.0.0/signalr.min.js"></script>
    <!-- Your custom JavaScript -->
    <script src="~/js/chat.js"></script>
</body>
</html>
