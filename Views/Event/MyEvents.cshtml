@model PlayasLimpiasWebApp.Models.EventCollectionViewModel

@{
    ViewData["Title"] = "My Events";
}

<h1 class="display-1 text-light" style="color: black;">My Events</h1>
<hr />

<div class="container">
    <form class="row justify-content-end">
        <div class="col-md-6"> 
            <input class="form-control me-2" type="search" placeholder="Search event by name" aria-label="Search" name="search">
        </div>
        <div class="col-md-2">
            <button class="btn btn-warning w-100" type="submit">Search</button>
        </div>
    </form>
</div>

<h1 class="text-light mt-5">@ViewBag.Message</h1>

<div class="container mt-5">
    <div class="row">
        @foreach(var item in Model.EventCollection)
        {
            <div class="col-md-4 mb-4">
                <div class="card">
                    <img src="~/images/@item.Image" class="card-img-top" alt="...">
                    <div class="card-body">
                        <h5 class="card-title">@item.Name</h5>
                        <p class="card-text">@item.Date.ToString("D")</p>
                        <p class="card-text">@item.Description</p>
                        <a class="btn btn-warning" asp-action="Details" asp-controller="Event" asp-route-id="@item.Id">Details</a>
                        <a class="btn btn-outline-danger" asp-action="Unvolunteer" asp-controller="Event" asp-route-id="@item.Id">Unvolunteer</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<div class="container text-dark mt-5 mb-5">
    <h1>Do you know a shoreline in need?</h1>
    <h5>Create a new event, ask for volunteers, and let's clean this up TOGETHER!</h5>
    <a class="btn btn-outline-warning" asp-action="Create">Create New</a>
</div>
